{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "types": ["node", "@wdio/globals/types", "@wdio/mocha-framework", "@wdio/visual-service"],
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "alwaysStrict": true,
    "checkJs": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "outDir": "./dist"
  },
  "sourceMap": true
}
